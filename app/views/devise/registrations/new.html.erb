<%= render partial: "shared/navbar", locals: { location: 'REGISTER'} %>

<div class="form">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="form_inputs">
      <div class="field">
        <%= f.text_field :full_name, autofocus: true, autocomplete: "full name", placeholder: "Full name", class: "input" %>
      </div>

      <div class="field">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: "input" %>
      </div>

      <div class="field">
        <%= f.password_field :password, autocomplete: "new-password", placeholder: "Password", class: "input" %>
      </div>

      <div class="field">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Password Confirmation", class: "input" %>
      </div>
    </div>

    <div class="actions">
      <%= f.submit "Sign up", class: "sign"%>
    </div>
  <% end %>
</div>



